{
    "manifest_version": 3,
    "name": "工时助手",
    "version": "1.0",
    "permissions": [
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://kebc.kingdee.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_scripts.js"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "lib/vue.global.min.js",
                "lib/axios.min.js",
                "lib/dayjs.min.js",
                "worktime-helper.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}